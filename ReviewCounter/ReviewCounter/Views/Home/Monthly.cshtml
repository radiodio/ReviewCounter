@{
    ViewData["Title"] = "集計月選択";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Amount">
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label class="col-md-2 control-label">Month</label>
                <input type="month" class="form-control" name="month" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label class="col-md-2 control-label">Project</label>
                <select name="projectId" asp-items="@(new SelectList((List<ReviewCounter.Models.Project>)ViewBag.Projects,"ProjectId","Name"))">
                    <option>Please select one</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="OK" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
